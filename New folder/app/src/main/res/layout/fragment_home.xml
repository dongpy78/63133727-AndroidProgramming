<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Số thứ nhất"
            android:textSize="26dp"/>

        <EditText
            android:id="@+id/edit_text_one"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Số thứ hai"
            android:textSize="26dp"/>

        <EditText
            android:inputType="number"
            android:id="@+id/edit_text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Kết Quả"
            android:textSize="26dp"/>

        <EditText
            android:enabled="false"
            android:id="@+id/edit_text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cong"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="Cộng"
            android:layout_marginRight="10dp"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_tru"

            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="Trừ"
            android:layout_marginRight="10dp"

            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_nhan"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Nhân"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btn_chia"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="Chia"
            android:background="@color/black"/>


    </LinearLayout>


</LinearLayout>