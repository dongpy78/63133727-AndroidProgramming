<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        tools:context=".MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nen_info" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_marginTop="60dp"

                android:background="@android:color/transparent"
                android:src="@drawable/avatar_112" />
        </FrameLayout>



        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Name: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_name"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="Bùi Văn Đồng"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Email: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_email"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="itvandong78py@gmail.com"
                    android:layout_height="48dp"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education: "
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_education"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_corner"

                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:text="Học CNTT - Đại học Nha Trang"
                        android:textColor="@color/white"

                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Address: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_address"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="Phú Hòa - Phú Yên"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Hobby: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_sothich"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="Xem phim, coding, nấu ăn..."
                    android:layout_height="48dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_show_info"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button"
            android:letterSpacing="0.05"
            android:layout_marginBottom="20dp"

            android:text="Show Info"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="62dp"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Skills"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="78dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/download_removebg_preview__1_"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="Sass"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/image_removebg_preview"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="Html"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="78dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/css"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="Css"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/react"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="React"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="78dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/js"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="JS"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/reactquery"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="React Query"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="78dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/taiwwind"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="TaiWindl"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/nelify"/>
                    <TextView
                        android:layout_width="78dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:text="Netlify"/>
                </LinearLayout>
            </LinearLayout>







        </LinearLayout>









    </LinearLayout>






</ScrollView>

