<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gadient_background"
    android:padding="36dp"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">

    <TextView
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:text="Your Account Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_user_full_name"
        tools:text="Mr Fullname User"
        android:layout_marginTop="48dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_email_address"
        android:text="email@address.com"
        android:textSize="16sp"
        android:textColor="#42A5F5"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_phone"
        android:textSize="16sp"
        android:layout_marginTop="24dp"

        android:text="0901932519"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    
</LinearLayout>