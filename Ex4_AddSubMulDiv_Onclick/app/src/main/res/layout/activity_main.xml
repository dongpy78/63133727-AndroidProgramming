<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Tính Toán"
        android:textSize="44dp"
        android:fontFamily="monospace"
        android:textColor="#1098ad"
        />

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Số thứ nhất: "
            android:fontFamily="monospace"
            android:textSize="19dp"/>

        <EditText
            android:id="@+id/edit_text_fist"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nhập vào số thứ nhất: " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Số thứ hai: "
            android:fontFamily="monospace"

            android:inputType="number"
            android:textSize="19dp"/>
            />

        <EditText
            android:id="@+id/edit_text_second"
            android:layout_width="200dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Nhập vào số thứ hai: " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        >

        <Button
            android:id="@+id/button_cong"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:textSize="24dp"
            android:onClick="Cong"
            />

        <Button
            android:id="@+id/button_tru"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-"
            android:textSize="24dp"
            android:onClick="Tru"
            android:layout_marginLeft="24dp"/>

        <Button
            android:id="@+id/button_nhan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="*"
            android:textSize="24dp"
            android:onClick="Nhan"

            android:layout_marginLeft="24dp"/>

        <Button
            android:id="@+id/button_chia"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="/"
            android:textSize="24dp"
            android:onClick="Chia"
            android:layout_marginLeft="24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Kết quả: "
            android:fontFamily="monospace"

            android:textSize="24dp"/>
            />

        <EditText
            android:id="@+id/edit_text_kq"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:hint="Kết quả là: " />

    </LinearLayout>



</LinearLayout>