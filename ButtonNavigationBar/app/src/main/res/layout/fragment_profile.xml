<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        tools:context=".MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nen_info" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_marginTop="60dp"

                android:background="@android:color/transparent"
                android:src="@drawable/avatar_112" />
        </FrameLayout>



        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Name: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_name"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="16dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="Bùi Văn Đồng"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Email: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_email"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="16dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="itvandong78py@gmail.com"
                    android:layout_height="48dp"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education: "
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_education"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_corner"

                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:text="Học CNTT - Đại học Nha Trang"
                        android:textColor="@color/white"

                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Address: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_address"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="16dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="Phú Hòa - Phú Yên"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Hobby: "
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_sothich"
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="16dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner"

                    android:text="Xem phim, coding, nấu ăn..."
                    android:layout_height="48dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_show_info"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button"
            android:letterSpacing="0.05"
            android:layout_marginBottom="20dp"

            android:text="Show Info"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Skills"
                android:textColor="#000"
                android:textSize="62dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="78dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/download_removebg_preview__1_" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Sass"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/image_removebg_preview" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Html"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="78dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/css" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Css"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/react" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="React"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="78dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/js" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="JS"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/reactquery" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="React Query"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="78dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/taiwwind" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="TaiWindl"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@drawable/nelify" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Netlify"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            android:background="#CF5985"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Inspirational quotes"/>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"


                    android:textStyle="bold"
                    android:textColor="#018884"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner_2"

                    android:text="Hôm nay khó khăn, ngày mai còn khó khăn hơn, nhưng ngày kia sẽ là ngày tuyệt vời - JackMa"
                    android:layout_height="135dp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"


                    android:textStyle="bold"
                    android:textColor="#018884"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner_2"

                    android:text="Hành trình gian nan nhất là hành trình một mình. Nhưng nó cũng là hành trình làm ta mạnh mẽ nhất"
                    android:layout_height="135dp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"


                    android:textStyle="bold"
                    android:textColor="#018884"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner_2"

                    android:text="Cách để bắt đầu đó là dừng việc nói lại và hãy bắt đầu làm - Walt Disney."
                    android:layout_height="135dp"/>
            </LinearLayout>


            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"


                    android:textStyle="bold"
                    android:textColor="#018884"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner_2"

                    android:text="Bạn không thể thành công, nếu bạn không chủ động” (Giáo Sư Phan Văn Trường)"
                    android:layout_height="135dp"/>
            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="62dp"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Contact"/>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"
                    android:textColor="#A1A2A4"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner_3"
                    android:text="Name"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"

                    android:textColor="#A1A2A4"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner_3"

                    android:text="Email"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:padding="10dp"
                    android:letterSpacing="0.05"
                    android:textSize="20dp"

                    android:textColor="#A1A2A4"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corner_3"

                    android:text="Message"
                    android:layout_height="266dp"/>
            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:layout_width="333dp"
                android:text="SEND"
                android:textSize="40dp"
                android:textStyle="bold"
                android:background="#B0AEC0"
                android:gravity="center"
                android:layout_height="76dp"/>
        </LinearLayout>
    </LinearLayout>






</ScrollView>