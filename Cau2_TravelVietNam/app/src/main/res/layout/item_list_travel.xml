<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"

    android:layout_height="144dp">


    <TextView
        android:id="@+id/text_view_heading"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textColor="#272727"
        android:layout_width="match_parent"
        android:layout_toStartOf="@id/card_view_image_container"
        android:layout_height="wrap_content"
        android:text="1. Item heading."/>

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_toStartOf="@id/card_view_image_container"
        android:fontFamily="sans-serif-light"
        android:textColor="#777"
        android:layout_below="@id/text_view_heading"
        android:layout_height="wrap_content"
        android:text="This will be the description. I will do a very long description to see what its look like on mutiple lines"/>


    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_alignBottom="@id/card_view_image_container"
        tools:rating="4.5f"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image_container"
        app:cardCornerRadius="16dp"
        android:layout_width="160dp"
        android:layout_marginStart="12dp"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/image_view_item_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/canh_dep_ha_long_viet_nam_055419665"
            />

    </androidx.cardview.widget.CardView>




</RelativeLayout>