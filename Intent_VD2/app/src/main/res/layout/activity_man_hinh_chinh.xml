<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#db2777"
    android:layout_height="match_parent"
    tools:context=".ManHinhDangNhap">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="34dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:text="Màn Hình Chính" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"

        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Chào mừng: "
            android:textSize="24dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/name_welcome"
            android:layout_width="match_parent"
            android:textColor="#3b82f6"
            android:textSize="24dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/btn_quiz_1"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:background="#14b8a6"
            android:layout_marginTop="26dp"
            android:textColor="#fff"
            android:padding="16dp"

            android:text="Quiz 1"
            android:textSize="24dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_quiz_2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:background="#14b8a6"
            android:text="Quiz 2"
            android:textColor="#fff"
            android:textSize="24dp" />

    </LinearLayout>


</LinearLayout>